/* pages/detail/detail.wxss */
page {
	background-color: #f9f9f9;
}

.wrap {
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100vh;
	background-color: white;
}

.sv {
	flex-grow: 1;
	width: 100%;
	height: 1rpx;
}

.info {
	display: flex;
	flex-direction: row;
	align-items: center;
	box-shadow: 0 1.067vw 5.333vw 0 hsla(0,0%,75%,.45);
	border-radius: 1.067vw;
	height: 360rpx;
	box-sizing: border-box;
	margin: 15rpx 25rpx 25rpx 25rpx;
}
.info-cover {
	margin-left: 30rpx;
}
.info-cover > image {
	width: 188rpx;
	height: 260rpx;
	border-radius: 1.067vw;
	box-shadow: 1.067vw 0.533vw 2.667vw 0 rgba(0,0,0,.06);
}

.info-right {
	height: 260rpx;
	width: 100%;
	margin-left: 40rpx;
	margin-right: 30rpx;

}

text {
	display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}
.info-title {
	color: #222;
	font-size: 5.3vw;
}
.info-date {
	margin-top: 2.1vw;
	margin-bottom: 2.6vw;
	color: #999;
	font-size: 3.7vw;
}
.info-desc {
	color: #666;
	font-size: 3.7vw;
}

.list {
	display: flex;
	flex-direction: column;
	box-shadow: 0 1.067vw 5.333vw 0 hsla(0,0%,75%,.45);
	border-radius: 1.067vw;
	box-sizing: border-box;
	margin: 25rpx 25rpx 25rpx 25rpx;
}
.list-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 128rpx;
	width: 100%;

}
.list-header-left {
	color: #666;
	font-size: 4.8vw;
	margin-left: 30rpx;
}
.list-header-right {
	color: #999;
	font-size: 3.7vw;
	margin-right: 30rpx;
}
.list-wrap {
	box-shadow: 0 0.533vw 5.333vw 0 hsla(0,0%,75%,.35);
}
.list-item {
	min-height: 120rpx;
	width: 100%;
	background-color: white;
	border-bottom: 1px solid #eee;
}

.list-item-column {
	/* position: -webkit-sticky;
  position: sticky;
	top: 10rpx;
	background-color: white; */
	color: #e3c88c;
	font-size: 4.4vw;
	margin-left: 40rpx;
	margin-top: 15rpx;
}
.list-item-article {
	margin: 20rpx 80rpx;
	font-size: 3.8vw;
}

.footer {
	height: 120rpx;
	text-align: center;
	background-color: #e3c88c;
}
.footer>text {
	line-height: 120rpx;
	color: white;
}