/* pages/content/content.wxss */

.wrap {
	margin-bottom: 110rpx;
}
.header-title {
	font-size: 4.8vw;
	text-align: center;
	color: #1e1e1e;
	width: 100%;
	display: block;
	padding-top: 30rpx;
}

.bottom {
	height: 110rpx;
	width: 100%;
	background-color: #f9f9f9;
	display: flex;
	justify-content: space-evenly;
	align-items: center;
	position: fixed;
	left: 0;
	bottom: 0;
}

.popContent {
	display: flex;
	flex-direction: column;
}
.popContent-header {
	width: 100%;
	height: 130rpx;
}
.popContent-header text {
	line-height: 130rpx;
	padding-left: 5vw;
	border-left: 1.067vw solid #e3c88c;
	color: #e3c88c;
}
.popContent-item {
	width: 100%;
	min-height: 110rpx;
}
.popContent-item text {
	margin: 40rpx;
}

.preventTouchMove{
	top: 0px ; 
	left:   0px ; 
	width:   100% ; 
	height:   100% ; 
	overflow:   hidden ; 
	position:   fixed ; 
	z-index:   0 ; 
}
