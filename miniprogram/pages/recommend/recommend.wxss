/* pages/recommend/recommend.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-content: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.input-wrap {
  box-shadow: 0 0.533vw 5.333vw 0 hsla(0,0%,75%,.45);
  border-radius: 15rpx;
  margin-top: 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.input-wrap image {
  /* display: inline-block; */
  width: 34rpx;
  height: 34rpx;
  margin-left: 20rpx;
}

.input-wrap input {
  display: inline-block;
  margin-left: 20rpx;
}

.adImg {
  height: 226rpx;
  width: 100%;
  margin-top: 20rpx;
}

.category-wrap {
  box-shadow: 0 0.533vw 5.333vw 0 hsla(0,0%,75%,.45);
  border-radius: 15rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.category-sub {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
}

.category-sub image {
  width: 88rpx;
  height: 88rpx;
}

.category-sub view {
  color: #999;
  font-size: 3.7vw;
}

.alert-content {
  background-color: red;
  color: white;
}