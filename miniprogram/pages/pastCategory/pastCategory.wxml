<van-tabs swipeable bind:change="onChange">
	<block wx:for="{{6}}">
		<van-tab title="{{index}}" name="{{index}}">
			<scroll-view scroll-y="true" style="height: {{scrollViewHeight}}px">
				<view class="content">
					<block wx:for="{{5}}">
						<view class="item" data-categoryCode="{{item.CategoryCode}}" bindtap="onTap">
							<text class="index">{{item.CategoryName}}</text>
							<text class="num">{{item.ResourceTotal}}种期刊</text>
						</view>
					</block>
				</view>
			</scroll-view>
		</van-tab>
	</block>
</van-tabs>
