<van-tabs swipeable bind:change="onChange">
	<block wx:for="{{yearList}}">
		<van-tab title="{{item}}" name="{{index}}">
			<scroll-view scroll-y="true" style="height: {{scrollViewHeight}}px">
				<view class="content">
					<block wx:for="{{issueList}}">
						<view class="item" data-categoryCode="{{item.CategoryCode}}" bindtap="onTap">
							<text class="index">{{item.Name}}</text>
							<text class="num">{{item.Year}} {{item.Issue}}</text>
						</view>
					</block>
				</view>
			</scroll-view>
		</van-tab>
	</block>
</van-tabs>
